<div class="w-100 d-flex justify-content-end ">
  <div data-controller="filter" class="btn-group mt-4 bg-white border rounded-4 me-3" role="group" aria-label="Basic radio toggle button group">
    <input type="radio" class="btn-check" name="btnradio" value="7" id="btnradio1" autocomplete="off" checked>
    <label class="btn btn-outline-dark btn-sm border-0 rounded-4" for="btnradio1">7 days</label>

    <input type="radio" class="btn-check" name="btnradio" value="14" id="btnradio2" autocomplete="off">
    <label class="btn btn-outline-dark btn-sm border-0 rounded-4" for="btnradio2">14 days</label>

    <input type="radio" class="btn-check" name="btnradio" value="30" id="btnradio3" autocomplete="off">
    <label class="btn btn-outline-dark btn-sm border-0 rounded-4" for="btnradio3">30 days</label>

    <%= link_to root_path do %>
      <label class="btn btn-outline-dark btn-sm border-0 rounded-4"><i class="fa-regular fa-calendar-days"></i></label>
    <% end %>
  </div>
</div>


<div class="mt-2">
  <%= render 'index_expenses', expenses: @expenses %>
</div>
